@model ClientDocument
@{
    ViewData["Title"] = "Détails";
    var pr = Model.Analysis?.Priority ?? ClientPriority.Unknown;
    string badge = pr switch { ClientPriority.High => "bg-success", ClientPriority.Medium => "bg-warning text-dark", ClientPriority.Low => "bg-danger", _ => "bg-secondary" };
}

<div class="d-flex align-items-center justify-content-between mb-3">
  <div>
    <h2 class="mb-1">@Model.Name</h2>
    <div class="text-muted">@Model.Company</div>
  </div>
  <div class="d-flex gap-2">
    <a class="btn btn-outline-secondary" asp-action="Edit" asp-route-id="@Model.Id">Éditer</a>
    <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline">
      @Html.AntiForgeryToken()
      <button class="btn btn-outline-danger" onclick="return confirm('Supprimer ce client ?')">Supprimer</button>
    </form>
  </div>
</div>

<div class="row g-4">
  <div class="col-lg-6">
    <div class="card shadow-sm">
      <div class="card-header">Informations</div>
      <div class="card-body">
        <div><b>Email:</b> @Model.Email</div>
        <div><b>Téléphone:</b> @Model.Phone</div>
        <div><b>Priorité:</b> <span class="badge @badge">@pr</span></div>
        <div class="mt-3"><b>Notes:</b><pre class="mb-0">@Model.Notes</pre></div>
      </div>
    </div>

    <div class="card shadow-sm mt-4">
      <div class="card-header">Interactions (notes illimitées)</div>
      <div class="card-body">
        @if (Model.Interactions.Count == 0)
        {
          <div class="text-muted">Aucune interaction.</div>
        }
        else
        {
          <ul class="list-group">
          @foreach (var it in Model.Interactions.OrderByDescending(i => i.DateUtc))
          {
            <li class="list-group-item">
              <div class="small text-muted">@it.DateUtc.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</div>
              <div>@it.Text</div>
            </li>
          }
          </ul>
        }
      </div>
    </div>

  </div>

  <div class="col-lg-6">
    <div class="card shadow-sm">
      <div class="card-header d-flex justify-content-between align-items-center">
        <span>Analyse</span>
        <form asp-action="Analyze" asp-route-id="@Model.Id" method="post">
          @Html.AntiForgeryToken()
          <button class="btn btn-sm btn-primary">Analyser</button>
        </form>
      </div>
      <div class="card-body">
        @if (Model.Analysis is null)
        {
          <div class="text-muted">Pas d'analyse pour l'instant.</div>
        }
        else
        {
          <div class="mb-2"><b>Source:</b> @Model.Analysis.Source</div>
          <div class="mb-2"><b>Générée:</b> @Model.Analysis.GeneratedAtUtc.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</div>
          <div class="mb-3"><b>Résumé:</b><div class="border rounded p-2">@Model.Analysis.Summary</div></div>
          <div><b>Mots-clés:</b>
            <div class="mt-1">
              @foreach (var k in Model.Analysis.Keywords)
              {
                <span class="badge bg-info text-dark me-1">@k</span>
              }
            </div>
          </div>
        }
      </div>
    </div>

    <div class="card shadow-sm mt-4">
      <div class="card-header">CV</div>
      <div class="card-body">
        @if (Model.Cv is null)
        {
          <div class="text-muted">Aucun CV.</div>
        }
        else
        {
          <div><b>Fichier:</b> @Model.Cv.FileName (@(Model.Cv.Size/1024) KB)</div>
          @if (!string.IsNullOrWhiteSpace(Model.Cv.ExtractedText))
          {
            <details class="mt-2">
              <summary>Texte extrait</summary>
              <pre>@Model.Cv.ExtractedText</pre>
            </details>
          }
          else
          {
            <div class="small text-muted mt-2">Texte non extrait (format non supporté ou erreur).</div>
          }
        }
      </div>
    </div>

  </div>
</div>
